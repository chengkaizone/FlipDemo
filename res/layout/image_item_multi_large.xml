<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:flip="http://schemas.android.com/apk/res-auto">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <flipboard.gui.DownloadImageView android:id="@id/image" android:background="@color/gray_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <FrameLayout android:layout_gravity="bottom" android:background="@drawable/bottom_text_gradient_medium" android:paddingBottom="@dimen/item_space" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@id/status_wrapper" android:paddingLeft="@dimen/item_space" android:paddingTop="@dimen/item_space" android:paddingRight="@dimen/item_space" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <include layout="@layout/status_embed_single" />
            </FrameLayout>
            <FrameLayout android:layout_gravity="right" android:id="@id/title_line" android:padding="@dimen/item_space" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <flipboard.gui.FLToggleImageButton android:id="@id/like_button" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
